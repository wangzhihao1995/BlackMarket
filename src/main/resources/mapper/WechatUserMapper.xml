<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhihao.blackmarket.mapper.WechatUserMapper">

    <sql id="BeanProperty">
        id, open_id, nickname, avatar_url, city, country, gender, language, province, create_time, update_time
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into wechat_user (open_id, nickname, avatar_url, city, country, gender, language, province)
        values(#{openId}, #{nickname}, #{avatarUrl}, #{city}, #{country}, #{gender}, #{language}, #{province})
    </insert>

    <select id="findWechatUserById" resultType="com.wangzhihao.blackmarket.domain.WechatUser">
        select
        <include refid="BeanProperty"/>
        from wechat_user
        where id = #{id}
    </select>

    <select id="findWechatUserByOpenId" resultType="com.wangzhihao.blackmarket.domain.WechatUser">
        select
        <include refid="BeanProperty"/>
        from wechat_user
        where open_id = #{openId}
    </select>

    <select id="update">
        update wechat_user
        set nickname = #{nickname},
            avatar_url = #{avatarUrl},
            city = #{city},
            country = #{country},
            gender = #{gender},
            language = #{language},
            province = #{province}
        where open_id = #{openId}
    </select>

</mapper>
