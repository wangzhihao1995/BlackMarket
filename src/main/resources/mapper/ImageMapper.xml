<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhihao.blackmarket.mapper.ImageMapper">

    <sql id="BeanProperty">
        id, key, bucket, user_id, status, create_time, update_time
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into image (key, bucket, user_id, status)
        values(#{key}, #{bucket}, #{userId}, #{status})
    </insert>

    <select id="findImageById" resultType="com.wangzhihao.blackmarket.domain.Image">
        select
        <include refid="BeanProperty"/>
        from image
        where id = #{id}
    </select>

    <select id="findImagesByIds" resultType="com.wangzhihao.blackmarket.domain.Image">
        select
        <include refid="BeanProperty"/>
        from image
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update">
        update image
        <set>
            <if test="status!=null">status = #{status}</if>
        </set>
        where id = #{id}
    </update>

</mapper>
